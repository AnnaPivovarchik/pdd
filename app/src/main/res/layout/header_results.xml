<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/headerResultQuestionId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/question_id_header"
        app:layout_constraintEnd_toStartOf="@id/headerResultQuestionStatus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/headerResultQuestionStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/question_status_header"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/headerResultQuestionId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>